<template>
  <div class="myBean">
    <div class="bean-top">
      <div class="bean-wrapper">
        <div class="bean-left">
          <image src="../../assets/svg/beans.svg" />
          <view>{{totalPoint}}</view>
        </div>
        <div
          class="bean-right"
          @tap="viewMarket"
        >
          <view>去簿记豆商城</view>
          <view>></view>
        </div>
      </div>
    </div>
    <div class="bean-list">
      <list-item
        v-for="item in listData"
        :item="item"
        :key="item.mouths"
      ></list-item>
    </div>
  </div>
</template>

<script>
import wepy from '@wepy/core';
import { baseUrl } from '../../assets/js/base.js';
wepy.page({
  config: {
    navigationBarTitleText: 'test'
  },
  props: {},
  data: {
    listData: [],
    totalPoint: 0
  },

  methods: {
    viewMarket: function() {
      wx.navigateTo({
        url: '../market/index'
      });
    },
    getBeanRecordList: function() {
      const { id } = wx.getStorageSync('baseInfo');
      wx.request({
        url: baseUrl + '/v1/point/findPointListByMouths',
        data: {
          userId: id
        },
        success: res => {
          const { data } = res;
          if (data.success) {
            data.data.forEach(item => {
              item.point.forEach(demo => {
                demo.createTimeStr = demo.createTime.substring(5);
              });
            });
            this.listData = data.data;
          } else {
            wx.showToast({
              title: '获取失败',
              icon: 'none'
            });
          }
          console.log('record-res', res);
        },
        fail: err => {
          console.log('record-err', err);
        }
      });
    }
  },

  created() {
    this.totalPoint = wx.getStorageSync('baseInfo').totalPoint;
    this.getBeanRecordList();
  }
});
</script>

